= form_for([@project, @task]) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name, class: 'span6'
  .field
    = f.label :description
    = f.text_area :description, :size => "25x5", class: 'span6'
  .field
    = f.label :sprint_id, "Sprint"
    = f.select(:sprint_id, Sprint.all.collect{|s| [s, s.id]}, :prompt => true)
  .field
    = f.label :points
    =# f. :points, class: 'span1'
    = f.select(:points, %w[0 0.5 1 2 3 5 8 13 20 40], { :index => nil })
    points
  .field
    %label.checkbox
      = f.check_box :finished
      Finished


  .actions
    = f.submit
